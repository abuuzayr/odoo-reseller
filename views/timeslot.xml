<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

    <!-- timeslot base window view -->
	<record id="timeslot_form_action" model="ir.actions.act_window">
		<field name="name">Timeslot Form</field>
		<field name="res_model">time.slot</field>
		<field name="view_type">form</field>
		<field name="view_mode">tree,form</field>
		<field name="help" type="html">
			<p class="oe_view_nocontent_create">Click Create to add new Timeslots to Services!</p>
		</field>
	</record>

        <!-- timeslot form view -->
        <record id="timeslot_form_view" model="ir.ui.view">
            <field name="name">timeslot.form.view</field>
            <field name="model">time.slot</field>
            <field name="arch" type="xml">
                <form string="Timeslot Form">
                    <sheet>
       			<!-- add header -->
			<div class="oe_title">
				<label for="name" class="oe_edit_only" string="Service"/>
				<h1><field name="service" class="oe_inline" /></h1>
			</div>
			<separator/>
                        <group col="4">
                        <group col="2">
							<field name="time_start" />
							<field name="total_duration_nicely" />
							<field name="time_end" />
							<field name="staff_quantity" />
							<field name="allowable_resource" />
                        </group>
                        <group col="2">
                        </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- timeslot tree view -->

        <record id="timeslot_tree_view" model="ir.ui.view">
            <field name="name">timeslot.tree.view</field>
            <field name="model">time.slot</field>
            <field name="arch" type="xml">
                <tree string="Timeslots">
					<field name="service" />
					<field name="time_start" />
					<field name="time_end" />
					<field name="staff_quantity" />
					<field name="allowable_resource" />
                </tree>
            </field>
        </record>

	<menuitem id="menu_timeslot" 
		name="Service Timeslots"
		parent="service_menu"
		action="timeslot_form_action" 
		sequence="3"/>

    </data>
</openerp>