<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- Configuration form -->

        <record id="view_scheduler_config_settings" model="ir.ui.view">
            <field name="name">Scheduler Settings</field>
            <field name="model">scheduler.config.settings</field>
            <field name="priority" eval="20"/>
            <field name="arch" type="xml">
                <form string="Configure Scheduler" class="oe_form_configuration">
                    <header>
                        <button string="Apply" type="object" name="execute" class="oe_highlight"/>
                        or
                        <button string="Cancel" type="object" name="cancel" class="oe_link"/>
                    </header>
                    <separator string="Scheduler management"/>
                    <group>
                        <label for="id" string="Operating Hour Settings"/>
                        <div>
                            <div>
                                <label for="start_time"/>
                                <field name="start_time" class="oe_inline"/>
                            </div>
                            <div>
                                <label for="end_time"/>
                                <field name="end_time" class="oe_inline"/>
                            </div>
                        </div>
                    </group>
                </form>
            </field>
        </record>

        <record id="action_scheduler_config" model="ir.actions.act_window">
            <field name="name">Configure Scheduler</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">scheduler.config.settings</field>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
        </record>

        <!-- Menus -->

        <menuitem id="menu_scheduler_config"
		name="Scheduler"
		parent="base.menu_config"
		sequence="50"
		action="action_scheduler_config"/>

    </data>
</openerp>
