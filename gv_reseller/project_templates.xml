<openerp>
<data>

    <template id="projects">
        <title>GV Reseller</title>
        <t t-call="website.layout">
        <div class="oe_structure">
	        <div class="gv_reseller-container">
	            <h1 class="pull-left">PROJECT</h1>
	            <div class="pull-right gv_reseller-searchbar">
	            	<input type="text" id="input-search-filter" placeholder="Type here..." />
	            	<div id="button-search-filter" class="btn-green pull-right">Search</div>
	            </div>
	        </div>
	        
	        <div class="gv_reseller-container">
		        <table class="gv_reseller-status-filter">
			      <tr>
			        <td value="">ALL<hr class="gv_reseller-line-up-arrow" /></td>
			        <td value="pending">PENDING<hr /></td>
			        <td value="approved">APPROVED<hr /></td>
			        <td value="paid">PAID<hr /></td>
			        <td value="active">ACTIVE<hr /></td>
			        <td value="expired">EXPIRED<hr/></td>
			        <td value="rejected">REJECTED<hr/></td>
			        <td value="cancelled">CANCELLED<hr/></td>
			        <td value="custom">CUSTOM<hr/></td>
			      </tr>  
			    </table>

	        </div> 
	        <div class="gv_reseller-container table-responsive">
	        	<table class="gv_reseller-project-table ">
		        	<thead>
		        		<tr>
		        			<th>ID</th>
		        			<th>Created</th>
		        			<t t-if="user['is_admin']">
		        				<th>Sales Person</th>
			        			<th>Price</th>
			        			<th>Sales Contact</th>
			        			<th>Sales Email</th>
		        			</t>
		        			<th>Company</th>
		        			<th>P.O.C.</th>
		        			<th>Contact</th>
		        			<th>Email</th>
		        			<th>Start</th>
		        			<th>Expiry</th>
		        			<th>Status</th>
		        			<th>Actions</th>
		        		</tr>
		        	</thead>
		        	<tbody>
		        		<t t-foreach="projects" t-as="project">
		        			<tr t-attf-id="{{project['id']}}">
			        			<td data-label="ID"><t t-esc="project['id']" /></td>
			        			<td data-label="Created"><t t-esc="project['created_date']" /></td>
			        			<t t-if="user['is_admin']">
			        				<td data-label="Sales Person"><t t-esc="project['sales_person']" /></td>
				        			<td data-label="Price"><t t-esc="project['price']" /></td>
				        			<td data-label="Sales Contact"><t t-esc="project['sales_contact']" /></td>
				        			<td data-label="Sales Email"><t t-esc="project['sales_email']" /></td>
			        			</t>
			        			<td data-label="Company"><t t-esc="project['customer_company']" /></td>
			        			<td data-label="P.O.C."><t t-esc="project['customer_contact_name']" /></td>
			        			<td data-label="Contact"><t t-esc="project['customer_contact_no']" /></td>
			        			<td data-label="Email"><t t-esc="project['customer_email']" /></td>
			        			<td data-label="Start"><t t-esc="project['start_date']" /></td>
			        			<td data-label="Expiry"><t t-esc="project['expiry_date']" /></td>
			        			<td data-label="Status" t-attf-class="{{project['status']}}"><t t-esc="project['status']" /></td>
			        			<td data-label="Actions">
			        				<t t-if="project['approve']">
			        					<div  class="gv_reseller-approve-button" t-attf-id="{{project['id']}}"> Approve</div>
			        				</t>
			        				<t t-if="project['reject']">
			        					<div class="gv_reseller-reject-button" t-attf-id="{{project['id']}}">Reject</div>
			        				</t>
			        				
			        			</td>
		        			
		        			</tr>
		        		</t>
	        		</tbody>
	        	</table>
	        	<form action="/project-details" id="form-project-details">
	        		<input name="project_id" type="text" id="gv_reseller-input-id" class="hidden"></input>
	        	</form>
	        </div>

	    <script type="text/javascript">
        	var user = <t t-esc="user"></t>
        </script>
        </div>
        </t>
    </template>
    
    <template id="project_frontend_assets" name="Project Frontend Assets" inherit_id="projects">
        <xpath expr="." position="inside">
			<link rel="stylesheet" href="/gv_reseller/static/css/project_overview.css" />
			<script type="text/javascript" src="/gv_reseller//static/js/project_filter.js" />   
			<script type="text/javascript" src="/gv_reseller//static/js/jquery.tablesorter.js" />      
        </xpath>
    </template>

</data>
</openerp>