<openerp>
	<data>
		<template id="profile">
			<title>GV Reseller</title>
			<t t-call="website.layout">
        		<div class="oe_structure">
        		    <div class="container">
        		    	<div class="container">
        		    		<h2 class="pull-left">Account Profile</h2>
        		    		<div class="pull-right gv_reseller-login-date">
        		    			<div class="pull-left">
        		    				Last Signed in:
        		    			</div>
        		    			<div class="pull-right">
        		    				<span t-field="user.login_date" t-field-options='{"format": "d/MM/y"}'/>
        		    			</div>
        		    			 
        		    		</div>
        		    	</div>
				      
				      <div class="gv_reseller-profile-tier">
				          <div class="gv_reseller-box-center">
				             <h2><t t-esc="user.property_product_pricelist.name" /></h2> 
				          </div>
				      </div>
				      
				      <div class="row">
				        <div class="col-sm-4">
				        	<t t-if="is_admin">
					            <div class="gv_reseller-box-header">
					              CREDIT BALANCE
					            </div>
					            <div class="gv_reseller-box-body">
									<p class="gv_reseller-pie-chart-total-amount">
										<t t-esc="credits" /> <br />
									</p>
										balance
					            </div>
					            <div class="gv_reseller-demo-account-rsa">
					              	<img src="/gv_reseller/static/img/Demo_icon.svg" class="gv_reseller-demo-img"/>
					              	<p><b>DEMO ACCOUNT LINK</b></p>
					              	<div class="gv_reseller-demo-website-div">
				              			<a t-att-href="company_website"> <t t-esc="company_website"></t></a>
					              	</div>
					            </div>
				            </t> 
				            <t t-if="not is_admin">
				            	 <div class="gv_reseller-demo-account-rs">
					              	<img src="/gv_reseller/static/img/Demo_icon.svg" class="gv_reseller-demo-img"/>
					              	<p><b>DEMO ACCOUNT LINK</b></p>
					              	<div class="gv_reseller-demo-website-div">
				              			<a t-att-href="company_website"> <t t-esc="company_website"></t></a>
					              	</div>
					            </div>
				            </t>
				        </div>
				        
				        <div class="col-sm-4">
				            <div class="gv_reseller-box-header">
				              TOTAL SALES
				            </div>
				            <div class="gv_reseller-box-body">
				            	<div>
				            		<canvas class="donutchart" height="250" width="250">
										<div t-att-data-value="pending_payment">Pending Payment</div>
										<div t-att-data-value="sales">Sales</div>
									</canvas>
									<div class="gv_reseller-pie-chart-total">
										<span class="gv_reseller-pie-chart-total-amount"><t t-esc="total_sales" /></span>
										<br/>
										sales
									</div>
									<div class="gv_reseller-pie-chart-legend-left">
										<div></div>
										Total Sales
									</div>
									<div class="gv_reseller-pie-chart-legend-right">
										<div></div>
										Pending Payment
									</div>
				            	</div>
				              	
				            </div>
				        </div>
				        <div class="col-sm-4">
				            <div class="gv_reseller-box-header">
				              TOTAL PROJECTS
				            </div>
				            <div class="gv_reseller-box-body">
				            	<div>
				            		<canvas class="donutchart" height="250" width="250">
				            			<div t-att-data-value="ongoing_projects">Ongoing Projects</div>
										<div t-att-data-value="active_projects">Active Projects</div>
									</canvas>
									<div class="gv_reseller-pie-chart-total">
										<span class="gv_reseller-pie-chart-total-amount"><t t-esc="total_projects" /></span>
										<br/>
										projects
									</div>
									<div class="gv_reseller-pie-chart-legend-left">
										<div></div>
										Active
									</div>
									<div class="gv_reseller-pie-chart-legend-right">
										<div></div>
										Ongoing
									</div>
				            	</div>
				              	
				            </div>
				        </div>
				      </div> <!-- row -->
  
					  <div class="row">
						<div class="col-sm-3">
				            <div class="gv_reseller-box-header">
				              ACCOUNT DETAILS
				            </div>
				            <div class="gv_reseller-user-details">
				            	<h5>USERNAME</h5>
				              	<p><t t-esc="user.login" /></p>
				              	<h5>NAME</h5>
				              	<p><t t-esc="user.name" /></p>
				              	<img src="/gv_reseller/static/img/user_icon.svg" />
				            </div>
				         </div>
				         
				         <div class="col-sm-3">
				            <div class="gv_reseller-box-header">
				              COMPANY DETAILS
				            </div>
				            <div class="gv_reseller-user-details">
				            	<h5>COMPANY NAME</h5>
				              	<p><t t-esc="company.name" /></p>
				              	<h5>BUSINESS REG. NO.</h5>
				              	<p><t t-esc="company.business_registration_number" /></p>
				              	<img src="/gv_reseller/static/img/companydetails_icon.svg" />
				            </div>
				         </div>
				         
				         <div class="col-sm-3">
				            <div class="gv_reseller-box-header">
				              CONTACT DETAILS
				            </div>
				            <div class="gv_reseller-user-details">
				            	<h5>CONTACT NO.</h5>
				              	<p><t t-esc="user.mobile" /></p>
				              	<h5>EMAIL ADDRESS</h5>
				              	<p><t t-esc="user.email" /></p>
				              	<img src="/gv_reseller/static/img/contactinfo_icon.svg" />
				            </div>
				         </div>
				         
				         <div class="col-sm-3">
				            <div class="gv_reseller-box-header">
				              COMPANY ADDRESS
				            </div>
				            <div class="gv_reseller-user-details">
				            	<h5>LINE 1</h5>
				              	<p><t t-esc="company.street" /></p>
				              	<h5>LINE 2</h5>
				              	<p><t t-esc="company.street2" /></p>
				              	<img src="/gv_reseller/static/img/address_icon.svg" />
				            </div>
				         </div>
						</div>    					       
				    </div> <!-- container -->
        		</div>
        	</t>
		</template>
	    
	    <template id="profile_frontend_assets" name="Profile Frontend Assets" inherit_id="profile">
	        <xpath expr="." position="inside">
				<link rel="stylesheet" href="/gv_reseller/static/css/profile.css" />
				<script type="text/javascript" src="/gv_reseller/static/js/jquery.chart.js" />    
				<script type="text/javascript" src="/gv_reseller/static/js/profile.js" />     
	        </xpath>
	    </template>
	
	</data>
</openerp>