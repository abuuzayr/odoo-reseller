<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

		<!-- project form view -->
		<record id="project_template_form_view" model="ir.ui.view">
			<field name="model">project.project</field>
			<field name="inherit_id" ref="project.edit_project" />
			<field name="arch" type="xml">
				<xpath expr="//page[@string='Team']" position="before">
					<page string="Client Info" >
						<group string="Client Information" col="2"  >
							<field name="client_company_name" />
							<field name="client_business_registration_no" />
							<field name="client_address_1" />
							<field name="client_address_2" />
							<field name="client_office_no" />
						</group>
					</page>
					<page string="Contact" >
						<group string="Contact Information" col="2"  >
							<field name="contact_title" />
							<field name="contact_name" />
							<field name="contact_email_address" />
							<field name="contact_mobile_no" />
							<field name="customer_remarks" />
						</group>
					</page>
				</xpath>
				
				<xpath expr="//field[@name='partner_id']" position="after">
					<newline/>
					<field name="admin_remarks" />
				</xpath>
			</field>
        </record>
    </data>
</openerp>