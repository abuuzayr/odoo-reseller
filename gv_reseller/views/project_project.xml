<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

		<!-- project form view -->
		<record id="project_template_form_view" model="ir.ui.view">
			<field name="model">project.project</field>
			<field name="inherit_id" ref="project.edit_project" />
			<field name="arch" type="xml">			
				<xpath expr="//field[@name='partner_id']" position="after">
					<newline />
					<field name="sale_order" />
					<newline></newline>
					<field name="status" />
				</xpath>
				
				<xpath expr="//page[@string='Project Stages']" position="after">
					<page string="Remarks">
						<group col="2" string="Remarks">
							<field name="admin_remarks" />
							<field name="customer_remarks" />
						</group>
					</page>
				</xpath>
				
				<xpath expr="//field[@name='date_start']" position="after">
					<field name="project_start_date" />
				</xpath>
			</field>
			
        </record>
        
        
        

    </data>
</openerp>