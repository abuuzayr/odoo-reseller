<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

		<!-- module form view -->
		<record id="product_module_template_form_view" model="ir.ui.view">
			<field name="model">product.template</field>
			<field name="inherit_id" ref="product.product_template_only_form_view" />
			<field name="arch" type="xml">
				<xpath expr="//page[@string='Information']" position="after">
					<page string="Module Dependencies" attrs="{'invisible':[('type', '!=', 'misc'), ('type', '!=', 'module')]}" >
						<group string="Dependencies" col="1"  >
							<field name="dependencies" />
							<field name="dependents" />
							<field name="other_services" />
						</group>
					</page>
				</xpath>
			</field>
        </record>
        
        <record id="product_service_template_form_view" model="ir.ui.view">
			<field name="model">product.template</field>
			<field name="inherit_id" ref="product.product_template_form_view" />
			<field name="arch" type="xml">
				<xpath expr="//field[@name='list_price']" position="after">
					<field name="duration" attrs="{'invisible':[('type', '!=', 'other'), ('type', '!=', 'optional')]}" />
				</xpath>
			</field>
        </record>

    </data>
</openerp>