<openerp>
<data>
    <template id="pricing">
        <title>GV Reseller</title>
        <t t-call="website.layout">
        <div class="oe_structure">
            <div class="container">
            <h1>Module Selection</h1>
            <div class="row">
                <div class="col-md-8" style="padding-bottom: 50px;">
                    <div id="no_users_div">
                        <h3>Number of Users</h3>
                        <input class="form-control" type="number" id="client_count" min="1"></input>
                    </div>

                    <div id="module_div">
                    <h3 id="modules_h3">Modules</h3>
                    <div class="row">
                        <t t-foreach="consu_product_product" t-as="pt">
                            <label class="col-md-4 module-select" t-attf-for="cb_{{pt.name}}" t-att-title="pt.name" t-att-listprice="pt.list_price">
                                <img t-att-src="'data:image/png;base64,%s' % pt.image"/>
                                <span class="module_title"><t t-esc="pt.name"></t></span>
                                <t t-if="isAdmin"> <span class="module_price">$<t t-esc="pt.list_price"></t><i>/month</i></span> </t>
                                <input class="cb_module" type="checkbox" t-attf-name="cb_{{pt.name}}" />
                                <div class="check"><i class="fa fa-check-circle"></i></div>
                                <t t-foreach="consu_product_product[pt]" t-as="pp">
                                    <t t-foreach="pp.attribute_value_ids" t-as="attr">
                                        <m-data 
                                            class="variant"
                                            t-att-year="attr.name"
                                            t-att-ppid="pp.id"
                                            t-att-price="pp.price_extra + pt.list_price"/>
                                    </t>
                                </t>
                            </label>
                        </t>
                    </div>
                    </div>

                    <div id="misc_module_div">
                        <h3>Miscellanous</h3>
                        <div class="row">
                            <t t-foreach="misc_product_product" t-as="pt">
                                <label class="col-md-4 module-select misc" t-attf-for="cb_{{pt.name}}" t-att-title="pt.name" t-att-listprice="pt.list_price">
                                    <img t-att-src="'data:image/png;base64,%s' % pt.image"/>
                                    <span class="module_title"><t t-esc="pt.name"></t></span>
                                    <t t-if="isAdmin"> <span class="module_price">$<t t-esc="pt.list_price"></t><i>/month</i></span> </t>
                                    <input class="cb_module" type="checkbox" t-attf-name="cb_{{pt.name}}" />
                                    <div class="check"><i class="fa fa-check-circle"></i></div>
                                    <t t-foreach="misc_product_product[pt]" t-as="pp">
                                        <t t-foreach="pp.attribute_value_ids" t-as="attr">
                                            <m-data 
                                                class="variant"
                                                t-att-year="attr.name"
                                                t-att-ppid="pp.id"
                                                t-att-price="pp.price_extra + pt.list_price"/>
                                        </t>
                                    </t>
                                </label>
                            </t>
                        </div>
                    </div>

                    <div id="other_service_div">
                    <h3>Other Services</h3>
                    <h4 class="green_header">Eligible for Package <span class="module_count other"></span>: <span class="module_count_range"></span> Selected Modules</h4>
                    <div class="row c_header">
                        <div class="col-xs-offset-3 col-xs-3">Duration</div>
                        <div class="col-xs-3">On Site</div>
                        <div class="col-xs-3">Remote</div>
                    </div>
                    <t t-foreach="other_product_product" t-as="pt">
                        <div class="product_row" t-att-listprice="pt.list_price">
                            <div class="header row">
                                <div class="title col-xs-6"><t t-esc="pt.name"></t></div>
                                <div class="col-xs-3">
                                    <label>
                                        <input type="checkbox" class="cb_service onsite"
                                            vtype="On Site"
                                            t-att-title="pt.name"/>
                                        <span class="pprice">
                                            $S<t t-esc="pt.list_price"></t>
                                        </span>
                                    </label>
                                </div>
                                <div class="col-xs-3">
                                    <label>
                                        <input type="checkbox" class="cb_service remote"
                                            vtype="Remote"
                                            t-att-title="pt.name"/>
                                        <span class="pprice">
                                            $S<t t-esc="pt.list_price"></t>
                                        </span>
                                    </label>
                                </div>
                                <m-data>
                                <t t-foreach="other_product_product[pt]" t-as="pp">
                                    <input type="hidden"
                                        t-att-group="pt.name"
                                        t-att-price="pp.lst_price"
                                        t-att-ppid="pp.id"
                                        t-attf-vrnt="{{pp.attribute_value_ids[0].name}}_{{pp.attribute_value_ids[1].name}}" />
                                </t>
                                </m-data>
                            </div>
                            <div class="desc">
                                <b>Description</b> <br/>
                                <t t-esc="pt.description_sale"></t>
                            </div>
                        </div>
                    </t>
                    </div>
                    
                    <div id="optional_service_div">
                    <h3>Optional</h3>
                    <h4 class="green_header">Eligible for Package <span class="module_count optional"></span>: <span class="module_count_range"></span> Selected Modules</h4>
                    <div class="row c_header">
                        <div class="col-xs-offset-3 col-xs-3">Duration</div>
                        <div class="col-xs-3">On Site</div>
                        <div class="col-xs-3">Remote</div>
                    </div>
                    <t t-foreach="optional_product_product" t-as="pt">
                        <div class="product_row" t-att-listprice="pt.list_price">
                            <div class="header row">
                                <div class="title col-xs-6"><t t-esc="pt.name"></t></div>
                                <div class="col-xs-3">
                                    <label>
                                        <input type="checkbox" class="cb_service onsite"
                                            vtype="On Site"
                                            t-att-title="pt.name"/>
                                        <span class="pprice">
                                            $S<t t-esc="pt.list_price"></t>
                                        </span>
                                    </label>
                                </div>
                                <div class="col-xs-3">
                                    <label>
                                        <input type="checkbox" class="cb_service remote"
                                            vtype="Remote"
                                            t-att-title="pt.name"/>
                                        <span class="pprice">
                                            $S<t t-esc="pt.list_price"></t>
                                        </span>
                                    </label>
                                </div>                                
                                <m-data>
                                <t t-foreach="optional_product_product[pt]" t-as="pp">
                                    <input type="hidden"
                                        t-att-group="pt.name"
                                        t-att-price="pp.lst_price"
                                        t-att-ppid="pp.id"
                                        t-attf-vrnt="{{pp.attribute_value_ids[0].name}}_{{pp.attribute_value_ids[1].name}}" />
                                </t>
                                </m-data>
                            </div>
                            <div class="desc">
                                <b>Description</b> <br/>
                                <t t-esc="pt.description_sale"></t>
                            </div>
                        </div>
                    </t>
                    </div>

                    <br/>
                    <hr/>

                    <h3>Client Details</h3>
                    <div class="row">
                        <div class="col-lg-6">
                            <label>Company Name</label>
                            <input class="form-control" id="co_name" name="co_name" type="text"/>
                        </div>
                        <div class="col-lg-6">                            
                            <label>Business Registration No.</label>
                            <input class="form-control" id="co_biz_no" name="co_biz_no" type="text"/>
                        </div>
                        <div class="col-lg-6">                            
                            <label>Address</label>
                            <input class="form-control" id="co_addr1" name="co_addr1" type="text" style="margin-bottom:5px;"/>
                            <input class="form-control" id="co_addr2" name="co_addr2" type="text"/>
                        </div>
                        <div class="col-lg-6">
                            <label>Mobile No.</label>
                            <input class="form-control" id="co_mob_no" name="co_mob_no" type="text"/>
                        </div>
                    </div>

                    <h3>Point of Contact</h3>
                    <div class="row">
                        <div class="col-lg-6">
                            <label>Title</label>
                            <input class="form-control" id="poc_title" name="poc_title" type="text"/>
                        </div>
                        <div class="col-lg-6">
                            <label>Name</label>
                            <input class="form-control" id="poc_name" name="poc_name" type="text"/>
                        </div>
                        <div class="col-lg-6">
                            <label>Email Address</label>
                            <input class="form-control" id="poc_email" name="poc_email" type="text"/>
                        </div>
                        <div class="col-lg-6">
                            <label>Mobile No.</label>
                            <input class="form-control" id="poc_mob_no" name="poc_mob_no" type="text"/>
                        </div>
                        <div class="col-lg-12">
                            <label>Remarks</label>
                            <textarea class="form-control" id="poc_remarks" name="poc_remarks"/>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 sticky" style="padding-bottom: 50px;">
                    <h3 class="sub">Subscription</h3>
                    <h4 class="total_amt">Total Amount:</h4>
                    <div id="total_amt">S$0.00</div>
                    <div class="summary_tabs row">
                        <div class="tab active" val="1">1 YR</div>
                        <div class="tab" val="2">2 YR</div>
                        <div class="tab" val="3">3 YR</div>
                    </div>
                    <div id="summary_list_modules" class="summary_list">
                        No Module Selected
                    </div>
                    <div id="summary_list_modules_misc" class="summary_list">
                        No Misc Module Selected
                    </div>
                    <h3 class="sub">Services</h3>
                    <div id="summary_list_service" class="summary_list">
                        No Service Selected
                    </div>

                    <div id="continue_btn" class="btn-green top-space">Continue</div>
                </div>
            </div>
            </div>
        </div>
        </t>
    </template>

    <template id="pricing2">
        <title>GV Reseller</title>
        <t t-call="website.layout">
        <div class="oe_structure">
        <div class="container">
            <h1>Module Selected</h1>
            <div class="row">
                <div class="row">
                    
                </div>
            </div>
            <h3>Service Selected</h3>
        </div>
        </div>
        </t>
    </template>

    <template id="gvrs_assets" name="My Style" inherit_id="website.assets_frontend">
        <xpath expr="link[last()]" position="after">
            <link href="/gv_reseller/static/css/module_select.css" rel="stylesheet" type="text/css"/>
            <script src="/gv_reseller/static/js/stickyfill.js"></script>    
            <script src="/gv_reseller/static/js/module_select.js"></script>        
        </xpath>
    </template>
        
</data>
</openerp>